{% extends 'base.html.twig' %}

{% block title %}Course
{% endblock %}

{% block body %}
	<h1>Course</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Name</th>
				<td>{{ course.name }}</td>
			</tr>
			{% if course.description %}
				<tr>
					<th>Description</th>
					<td>{{ course.description }}</td>
				</tr>
			{% endif %}
		</tbody>
	</table>
	<h1 class="mt-3">Уроки</h1>
	<ol>
		{% for lesson in course.lessons|sort((a, b) => a.serial <=> b.serial) %}
			<li>
				<a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
			</li>
		{% endfor %}
	</ol>
	<hr>

	<a href="{{ path('app_course_index') }}">back to list</a>
	<a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>
	<a href="{{ path('app_lesson_new', {'course_id': course.id}) }}">add lesson</a>

	{{ include('course/_delete_form.html.twig') }}
{% endblock %}
