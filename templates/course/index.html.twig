{% extends 'base.html.twig' %}

{% block title %} {{ "Courses / " ~ parent() }}
{% endblock %}

{% block body %}
	<h1>Курсы</h1>
	<div class="row  row-cols-1 row-cols-md-2 g-4">
	  {% for course in courses %}	
		<div class="col">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.name }}</a></h5>
                <p class="card-text">{{ course.description }}</p>
                <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-primary"> Подробнее </a>
              </div>
            </div>
          </div>
			{% else %}
				<h3> Здесь пока нет ни одного курса</h3>
			{% endfor %}
	</div>
	

	<a class="btn btn-secondary p-2 px-4 mt-3 " href="{{ path('app_course_new') }}"> Новый курс </a>
{% endblock %}

